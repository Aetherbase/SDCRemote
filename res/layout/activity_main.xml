<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.omkar.sdcremote.MainActivity"
    tools:layout_editor_absoluteY="73dp">


    <ToggleButton
        android:id="@+id/Accelerator1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:text="ACC 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/Accelerator2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="15dp"
        android:text="ACC 2"
        app:layout_constraintBottom_toTopOf="@+id/Accelerator1"
        app:layout_constraintStart_toStartOf="parent" />

    <ToggleButton
        android:id="@+id/Accelerator3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="ACC 3"
        app:layout_constraintBaseline_toBaselineOf="@+id/acc3text"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/acc1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginStart="14dp"
        android:text="ACC 1"
        app:layout_constraintBottom_toBottomOf="@+id/Accelerator1"
        app:layout_constraintStart_toEndOf="@+id/Accelerator1" />

    <TextView
        android:id="@+id/acc2text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="14dp"
        android:text="ACC 2"
        app:layout_constraintBottom_toBottomOf="@+id/Accelerator2"
        app:layout_constraintStart_toEndOf="@+id/Accelerator2" />

    <TextView
        android:id="@+id/acc3text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="1dp"
        android:text="ACC 3"
        app:layout_constraintStart_toEndOf="@+id/Accelerator3"
        app:layout_constraintTop_toTopOf="@+id/IPText" />

    <ToggleButton
        android:id="@+id/Brake1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:text="BR 1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ToggleButton
        android:id="@+id/Brake2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="16dp"
        android:text="BR 2"
        app:layout_constraintBottom_toTopOf="@+id/Brake1"
        app:layout_constraintEnd_toEndOf="parent" />

    <ToggleButton
        android:id="@+id/Brake3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="BR 3"
        app:layout_constraintBaseline_toBaselineOf="@+id/br3text"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/br1text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="13dp"
        android:text="BR 1"
        app:layout_constraintBottom_toBottomOf="@+id/Brake1"
        app:layout_constraintEnd_toStartOf="@+id/Brake1" />

    <TextView
        android:id="@+id/br2text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="12dp"
        android:text="BR 2"
        app:layout_constraintBottom_toBottomOf="@+id/Brake2"
        app:layout_constraintEnd_toStartOf="@+id/Brake2" />

    <TextView
        android:id="@+id/br3text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="27dp"
        android:layout_marginEnd="11dp"
        android:text="BR 3"
        app:layout_constraintBottom_toTopOf="@+id/Brake2"
        app:layout_constraintEnd_toStartOf="@+id/Brake3" />

    <Button
        android:id="@+id/SteerLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="28dp"
        android:text="Left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/SteerRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="144dp"
        android:layout_marginTop="28dp"
        android:text="Right"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/DegreeMeter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:text="0"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ConnectButton"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="23dp"
        android:text="Connect"
        app:layout_constraintBottom_toBottomOf="@+id/Disconnect"
        app:layout_constraintStart_toEndOf="@+id/acc1text"
        app:layout_constraintTop_toTopOf="@+id/Disconnect" />

    <Button
        android:id="@+id/Disconnect"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="33dp"
        android:text="Disconnect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/br1text" />

    <EditText
        android:id="@+id/IPText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
        android:ems="10"
        android:hint="IP ADDRESS"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/Porttext"
        app:layout_constraintStart_toStartOf="@+id/Porttext" />

    <EditText
        android:id="@+id/Porttext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="23dp"
        android:ems="10"
        android:hint="PORT NUMBER"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/acc2text"
        app:layout_constraintStart_toEndOf="@+id/acc2text"
        app:layout_constraintTop_toTopOf="@+id/acc2text" />

    <ToggleButton
        android:id="@+id/AcceleratorOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="ACC OFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/BrakeOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="28dp"
        android:text="BR OFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/AcceleratorOffText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:text="ACC OFF"
        app:layout_constraintStart_toStartOf="@+id/AcceleratorOff"
        app:layout_constraintTop_toBottomOf="@+id/AcceleratorOff" />

    <TextView
        android:id="@+id/BrakeOffTExt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="8dp"
        android:text="BR OFF"
        app:layout_constraintStart_toStartOf="@+id/BrakeOff"
        app:layout_constraintTop_toBottomOf="@+id/BrakeOff" />

</android.support.constraint.ConstraintLayout>
